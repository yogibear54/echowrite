# Voice Dictation Tool Environment Variables
# Copy this file to .env and fill in your actual values

# Replicate API Token (Required)
# Get your API token from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_your_api_token_here

# Maximum recording duration in minutes (default: 5.0, range: 0.1-60.0)
# Recording will automatically stop when this limit is reached
MAX_RECORDING_MINUTES=5

# Audio sample rate in Hz (default: 44100, range: 8000-48000)
# Common values: 8000, 16000, 44100, 48000
SAMPLE_RATE=44100

# Replicate model name (default: vaibhavs10/incredibly-fast-whisper)
# The model used for speech transcription
REPLICATE_MODEL=vaibhavs10/incredibly-fast-whisper

# Minimum recording duration in seconds (default: 1.0, min: 0.1)
# Recordings shorter than this will not be processed
MIN_RECORDING_SECONDS=1.0

# Status Indicator Plugins (default: i3status)
# Comma-separated list of plugins to enable
# Available: i3status
# Example: STATUS_PLUGINS=i3status
STATUS_PLUGINS=i3status

# i3 Status Bar Plugin Configuration
# Path to the status file that i3bar will read (default: /tmp/voice2text_status)
# This file contains JSON in i3bar format with the current application status
I3_STATUS_FILE=/tmp/voice2text_status
